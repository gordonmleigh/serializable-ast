{
  "name": "serializable-ast",
  "version": "0.1.0",
  "description": "A serializable AST format for TypeScript",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "compile": "tsc -p tsconfig.lib.json",
    "generate": "node --loader=@swc-node/register/esm generate/main.ts",
    "lint": "eslint src/ generate/ --ext=ts",
    "watch:check": "tsc -w",
    "watch:compile": "tsc -w -p tsconfig.lib.json",
    "watch:generate": "tsc -w -p tsconfig.generate.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gordonmleigh/serializable-ast.git"
  },
  "author": "Gordon Leigh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gordonmleigh/serializable-ast/issues"
  },
  "homepage": "https://github.com/gordonmleigh/serializable-ast#readme",
  "devDependencies": {
    "@swc-node/register": "^1.6.5",
    "@swc/helpers": "^0.5.1",
    "@types/node": "^20.2.3",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "source-map": "^0.7.4"
  }
}
